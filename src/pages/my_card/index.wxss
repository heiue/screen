page{
  background-color: #fff
}

.title-top{
  padding: 0 20rpx;
  background: #fff;
}
.header{
  width: 100%;
  height: 410rpx;
  background-color: #ffe459;
  padding-top: 200rpx;
  position: relative;
}
.header-bg{
  width: 100%;
  height: 210rpx;
  background-color: #fff;
  border-radius: 15rpx 15rpx 0 0
}
.header-card{
  position: absolute;
  top: 50rpx;
  left: 20rpx;
  right: 20rpx;
  height: 340rpx;
  background-color: #ffffff;
	box-shadow: 0px 0px 24rpx 0px 
		rgba(68, 68, 68, 0.15);
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx 0 40rpx;
}
.header-cont{
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.title{
  display: flex;
  margin-bottom: 36rpx;
  align-items:flex-end;
}
.name{
  font-family: MicrosoftYaHei;
	font-size: 48rpx;
	letter-spacing: 5rpx;
	color: #2e2e2e;
  max-width: 260rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.title-icon{
  padding: 5rpx 10rpx 7rpx;
  height: 48rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between
}
.title-icon image{
  width: 16rpx;
  height: 16rpx;
  /* background-color: seagreen */
}
.title-text{
  font-family: MicrosoftYaHei;
  font-size: 20rpx;
	letter-spacing: 2rpx;
  color: #5b5b5b;
  padding-bottom: 4rpx;
  max-width: 100rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.header-portrait{
  width: 238rpx;
  height: 238rpx;
  border-radius: 238rpx;
  overflow: hidden;
}
.header-portrait image{
  width: 100%;
  height: 100%;
}
.intro{
  margin-bottom: 36rpx;
  display: flex;
  align-items: flex-end
}
.intro view:nth-of-type(1){
  font-family: MicrosoftYaHei;
	font-size: 24rpx;
	letter-spacing: 2rpx;
	color: #4f4f4f;
}
.intro-phone{
  font-size: 20rpx;
  font-family: MicrosoftYaHei;
  letter-spacing:2rpx;
  color:#4f4f4f;
  margin-bottom: -5rpx;
}
.intro view:nth-of-type(2){
  font-family: MicrosoftYaHei;
	font-size: 20rpx;
	letter-spacing: 2rpx;
	color: #4f4f4f;
}
.form{
  padding: 0 20rpx;
}
.wechat{
  width: 100%;
  height: 82rpx;
  border-bottom: 1px solid #e1e1e1;
  display: flex;
  align-items: center;
}
.wechat-icon{
  width: 21rpx;
  height: 21rpx;
  border: 3rpx solid #8f44ec;
  margin-right: 16rpx;
  border-radius: 21rpx;
}
.wechat-cont{
  display: flex;
  align-items: center
}
.label, .text{
  font-family: MicrosoftYaHei;
	font-size: 20rpx;
	letter-spacing: 2rpx;
	color: #616161;
}
.email-icon{
  width: 21rpx;
  height: 21rpx;
  border: 3rpx solid #eb6100;
  margin-right: 16rpx;
  border-radius: 21rpx;
}
.my-intro{
  padding: 34rpx 0 30rpx;
  border-bottom: 1px solid #e1e1e1;
}
.my-intro-title{
  padding-bottom: 20rpx;
  display: flex;
  align-items: center;
}
.intro-title-icon{
  width: 30rpx;
	height: 30rpx;
  border: solid 3rpx #ffe459;
  border-radius: 30rpx;
  margin-right: 20rpx;
}
.my-intro-name{
  font-family: MicrosoftYaHei;
	font-size: 24rpx;
	letter-spacing: 2rpx;
	color: #7f7f7f;
}
.my-intro-cont{
  font-family: MicrosoftYaHei;
	font-size: 20rpx;
	line-height: 34rpx;
	letter-spacing: 2rpx;
	color: #7f7f7f;
}
.my-intro-cont textarea{
  position: initial;
  z-index: 0;
}
.my-intro-cont .textarea{
  width: 100%;
  height: 100px
}
.my-photo{
  padding: 34rpx 0 30rpx;
  border-bottom: 1px solid #e1e1e1;
}
.photo-title-icon{
  width: 30rpx;
	height: 30rpx;
  border: solid 3rpx #47abf6;
  border-radius: 30rpx;
  margin-right: 20rpx;
}
.operation{
  width: 100%;
	min-height: 300rpx;
	background-color: #ffe459;
  border-radius: 10rpx;
  /* display: flex;
  justify-content: center;
  align-items: center; */
  position: relative;
  overflow: visible;
}
.upimg-icon{
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.upload{
  width: 37rpx;
  height: 37rpx;
}
.operation-btn{
  position: absolute;
  left: 0;
  bottom: 28rpx;
  display: flex;
  justify-content: center;
  width: 100%;
}
.edit-btn, .share{
  width: 240rpx;
	height: 72rpx;
	background-color: #ffffff;
	box-shadow: 0px 0px 40px 0px 
		rgba(78, 65, 0, 0.27);
  border-radius: 72rpx;
  margin: 0 30rpx;
  text-align: center;
  line-height: 72rpx;
  font-family: MicrosoftYaHei;
	font-size: 20rpx;
	letter-spacing: 2rpx;
	color: #4f4f4f;
}
textarea{
  width: 100%;
  height:100px;
}
.up-user-info{
  width: 600rpx;
  padding:25rpx 0;
  text-align: center;
  color:#fff;
  background: #e0e0e0;
  border-radius: 10rpx;
  margin:50rpx auto;
}
.up-user-info.on{
  background: #ffe147;
}
.profile-model{
  position: fixed;
  top:50%;
  left:50%;
  padding:20rpx 60rpx;
  background: rgba(0,0,0,.3);
  transform: translate(-50%,-50%);
  border-radius: 100rpx;
  color:#fff;
}
.instry-dialog{
  position:fixed;
  width: 100%;
  height:100%;
  top:0;
  left:0;
  background: rgba(0,0,0,.3);
  z-index:1000;
  display:none;
}
.instry-dialog.show{
  display: block;
}
.instry-dialog-container{
  width: 650rpx;
  height:700rpx;
  background: #fff;
  border-radius: 30rpx;
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  padding:30rpx;
  font-size: 30rpx;
  word-break: break-all;
}
.instry-dialog-container text{
  padding:10rpx 25rpx;
  display: inline-block;
}
