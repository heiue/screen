/* pages/chat/chat.wxss */
.chat-header{
  width: 100%;
  height: auto;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  background: #f5f5f5;
}
.tip{
  width: 400rpx;
  height: 42rpx;
  line-height: 42rpx;
  margin: 20rpx auto;
  background: #dddddd;
  text-align: center;
  border-radius: 5rpx;
}
.house-item{
  width:100%;
  background: #ffffff;
  padding: 20rpx;
  box-sizing: border-box;
}
.house-item button{
  position: absolute;
  bottom:20rpx;
  right: 20rpx;
}
button[type=default] {
  background: #ffffff;
  width: 160rpx;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0;
  font-size: 28rpx;
  color: #69BEFF;
}
button::after{
  border:1px solid #69BEFF;
}
.list-item .item-info{
  padding-bottom: 0rpx;
}
.flex-wrap.s ,.house{
  flex-direction:row-reverse;

}
.h49{
  width: 100%;
  height: 49px;
}
.chat-item.flex-wrap.s{
  margin: 20px 10px 20px 0px;

}
.chat-item.flex-wrap{
  line-height: 20px;
  height: auto;
  margin: 20px 0px 20px 10px;
  
}

.chat-footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: auto;
  background: #ffffff;
  font-size: 22rpx;
}
.chat-footericon{
  padding:20rpx 0rpx; 
  color: #999999;

}
.send{
  width: 128rpx;
  height: 35px;
  line-height: 35px;
  text-align: center;
  background: #2FA0FF;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 6rpx;
  display: inline-block;
  margin-top: 20rpx;
  margin-right:20rpx;
}
.icon-yuyin::before{
  font-size: 70rpx;
  color: #7F8389;
  display: block;
  height: 49px;
  line-height: 49px;
  text-align: center;
}
.input{
  height: 35px;
  line-height: 35px;
  font-size: 13px;
  margin:20rpx;
  background: #F5F5F5;
  padding-left: 10rpx;
  box-sizing: border-box; 
}
.avatar{
  width: 40px;
  height: 40px;
  background: #69BEFF;
  border-radius:50%;
  text-align: center;
  line-height: 40px;
  color: #ffffff;
}
.chat-item.flex-wrap .content{
  background: #ffffff;
  margin-left: 10px;
  padding:12px;
  border-radius:10px; 
  width: auto;
  max-width: 480rpx;
  font-size: 15px;
  text-align: justify;
}
.chat-item.flex-wrap.house{
  margin-right: 10px;
}

.chat-item.flex-wrap.s .content{
  margin-right: 10px;
  background: #69BEFF;
  color: #ffffff;
}
.chat-item.flex-wrap.house .content{
  margin-right: 10px;
  padding: 20rpx;
  width: 520rpx;
  border: 1px solid #69BEFF;
  
}

.chat-time{
  width: 80px;
  height: 21px;
  line-height: 21px;
  background: #CECECE;
  color: #ffffff;
  font-size: 12px;
  margin: 20px auto 0px;
  text-align: center;
  border-radius:5px;

}
.info-name{
  font-size: 28rpx;
}
.info-price{
  color: #E93D26;
  font-size: 26rpx;
}
.info-title{
  color: #999999;
  font-size: 12px;
}
.info-type{
  width: 50px;
  height: 18px;
  line-height: 18px;
  color: #ffffff;
  font-size: 12px;
  background: #CECECE;
  text-align: center;
  border-radius: 2px;

}
.footer-h{
  height: 49px;
  width: 100%;
}
.emoji-con{
  padding: 20rpx 0rpx;
}
.emoji{
  font-size: 50rpx;
  float: left;
  width:14%;
  text-align: center;
  margin-bottom: 20px;
}
.nullBox{
  width:100%;
  height: 500rpx;
}