page{
  width: 100%;
  height: 100%;
}
.container{
  position: relative;
  width: 100%;
  height: 100%;
}
.bg{
  width: 100%;
  height: 100%;
}
.cont{
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.logo{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 32rpx;
}
.logo-img{
  width: 132rpx;
  height: 132rpx;
  margin-bottom: 30rpx;
}
.logo-img image{
  width: 100%;
  height: 100%;
}
.logo-text{
  font-family: SourceHanSansCN-Regular;
	font-size: 27rpx;
	color: #4e4e4e;
}
.form-cont{
  width: 490rpx;
  margin-bottom: 70rpx;
}
.form-item{
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  border-bottom: 2px solid rgba(255, 255, 255, 0.4)
}
.form-item image{
  width: 51rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.form-item input{
  flex: 1;
  height: 100%;
  font-family: SourceHanSansCN-Regular;
	font-size: 27rpx;
	color: #4e4e4e;
}
.submit{
  width: 490rpx;
  height: 85rpx;
  text-align: center;
  line-height: 85rpx;
  border-radius: 85rpx;
  background-color: #fff;
  box-shadow: 0rpx 13rpx 35rpx 0rpx 
    rgba(187, 205, 212, 0.48);
  font-family: SourceHanSansCN-Regular;
	font-size: 37rpx;
	color: #3e3e3e;
}