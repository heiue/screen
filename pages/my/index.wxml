<view class="container">
  <view class='title-top'>
    <title title="个人中心" isFirst="{{false}}"></title>
  </view>
  <view class="userinfo">
    <view class="user">
      <view class="user-header">
        <image src="../../images/header.jpg"></image>
      </view>
      <view class="name-cont">
        <view class="name">免贵姓张名无敌</view>
        <view class="user-label">标签：制片 · 编剧</view>
      </view>
    </view>
    <view class="my-card" bind:tap="goMyCard">
      <text>我的名片</text>
      <view class="hint-icon"></view>
    </view>
  </view>
  <view class="my-nav">
    <view class="nav-item" bind:tap="goFavorite">
      <image src="../../images/my_icon_collection.png"></image>
      <view class="nav-item-name">我的收藏</view>
      <view class="new-hint">NEW</view>
    </view>
    <view class="nav-item">
      <image src="../../images/my_icon_member.png"></image>
      <view class="nav-item-name">剧本超市会员</view>
      <view class="new-hint">NEW</view>
    </view>
    <view class="nav-item" bind:tap="gohistory">
      <image src="../../images/my_icon_history.png"></image>
      <view class="nav-item-name">查看历史</view>
      <view class="new-hint">NEW</view>
    </view>
  </view>
  <view class="my-message">
    <view class="message-left">
      <image src="../../images/my_icon_message.png"></image>
      <text>我的消息</text>
    </view>
    <view class="message-right">
      66
    </view>
  </view>
  <view class="my-list">
    <view class="my-item">
      <view class="my-item-left">
        <image src="../../images/my_icon_adviser.png"></image>
        <text>专属经纪顾问</text>
      </view>
      <view class="my-right-text">
        123123123123
      </view>
    </view>
    <view class="my-item">
      <view class="my-item-left">
        <image src="../../images/my_icon_setup.png"></image>
        <text>设置</text>
      </view>
      <view class="my-item-right">
        <image src="../../images/icon-right-arrow.png"></image>
      </view>
    </view>
    <navigator class="my-item" url="/pages/about_us/index" hover-class="none">
      <view class="my-item-left">
        <image src="../../images/my_icon_about.png"></image>
        <text>关于</text>
      </view>
      <view class="my-item-right">
        <image src="../../images/icon-right-arrow.png"></image>
      </view>
    </navigator>
  </view>
</view>