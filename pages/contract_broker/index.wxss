page{
  height: 100%;
}
.container{
  
  min-height: 100%;
  background-color: #fff;
  position: relative;
}
.container-bg{
  width: 100%;
  height: calc(100% - 300rpx);
  position: absolute;
  bottom: 0;
  left: 0;
}
.cont{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding-top:140rpx; 
}
.line{
  width: 100%;
  height: 10rpx;
  background-color: #f1f2fb;
}
.header{
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
}
.header-photo{
  width: 90rpx;
  height: 90rpx;
  border-radius: 90rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.header-photo image{
  width: 100%;
  height: 100%;
}
.name{
  font-family: MicrosoftYaHei;
	font-size: 30rpx;
	letter-spacing: 2rpx;
	color: #333333;
}
.intro{
  padding: 10rpx 40rpx;
}
.intro text:nth-of-type(1){
  font-family: MicrosoftYaHei;
  font-size: 22rpx;
  
	letter-spacing: 2rpx;
	color: #333333;
}
.intro text:nth-of-type(2){
  line-height: 20rpx;
  font-family: MicrosoftYaHei;
	font-size: 18rpx;
	letter-spacing: 2rpx;
	color: #626262;
}
.contact{
  padding: 0 20rpx
}
.contact-item{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  border-bottom: 1px solid #f2f0f0
}
.contact-text{
  font-family: MicrosoftYaHei;
	font-size: 24rpx;
	letter-spacing: 2rpx;
	color: #333333;
}
.contact-icon{
  width: 42rpx;
  height: 48rpx;
}