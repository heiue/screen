<view class='index-title'>
  <image src='../../images/index/index-title.png'></image>
</view>

<view class="swiper-tab">
  <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">我要编剧</view>
  <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">我要剧本</view>
  <navigator class='search'>
    <image src='../../images/index/search.png'></image>
  </navigator>
</view>
<swiper class='index-swiper-tab' current="{{currentTab}}" duration="300" bindchange="swiperTab" style='height:{{swiperHeight}}px'>
  <!-- 我要编剧 -->
  <swiper-item>
    <!-- 轮播 -->
    <view class='index-swiper'>
      <swiper autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
        <block wx:for="{{imgUrls}}">
          <swiper-item>
            <image src="{{item}}" class="slide-image" />
          </swiper-item>
        </block>
      </swiper>
    </view>
    <!-- 轮播 -->
    <!-- 求职广告 -->
    <view class='index-notice'>
      <image src='../../images/index/index-notice-bg.png'></image>
      <view class='index-notice-text'>
        <view class='index-notice-title'>任务广场</view>
        <text class='index-notice-con'>编剧求职哪家强，剧本超市帮您忙！</text>
      </view>
    </view>
    <!-- 求职广告 -->
    <!-- 签约编剧 -->
    <view class='index-screen-writer'>
      <view class='screen-writer-title'>签约编剧</view>
      <view class='screen-writer-list'>
        <view class='screen-writer-item' wx:for="{{4}}">
          <view class='screen-writer-head'>
            <image src='../../images/index/index.png'></image>
          </view>
          <view class='screen-writer-name'>施瓦辛格</view>
        </view>
      </view>
    </view>
    <!-- 签约编剧 -->
    <!-- 大家都在看 -->
    <view class='index-look'>
      <view class='screen-writer-title'>大家都在看</view>
      <view class='index-look-content'>
        <scroll-view scroll-x="true" >
          <view class="scroll-x">
            <view wx:for-items="{{scrolls}}" wx:key="name"  class="index-look-list">
              <view class="index-look-item">
                <view class='look-item-text'>
                  <view class="look-item-hint">当前热门</view>
                  <view class="look-item-name">名侦探柯南编剧里夫斯</view>
                  <view class="look-item-sub">迷上了柯南一集杀几个日本人助助兴。</view>
                </view>
                <view class='look-item-img'>
                  <image src='../../images/index/img_header.png'></image>
                </view>
              </view>
            </view>
          </view>
        </scroll-view>
      </view>
    </view>
    <!-- 大家都在看 -->
    <view class='index-water'>
      <view class='screen-writer-title'>签约编剧</view>
      <view class='fall-container'>
        <block wx:for="{{list}}" wx:key="{{item.id}}">
          <!--瀑布流内容卡片-->
          <view class='fall-item'>
            <image src='{{item.img}}' mode="widthFix"></image>
            <view>{{item.name}}</view>
            <view>代表作：{{item.masterpiece}}</view>
          </view>
        </block>
      </view>
    </view>
  </swiper-item>
  <!-- 我要剧本 -->
  <swiper-item>

  </swiper-item>
</swiper>

