page{
  background-color: #fff;
}
.container{
  padding: 0 20rpx 187rpx;
}
.header{
  width: 100%;
  height: 150rpx;
  border-bottom: 1px solid #e5e5e5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 20rpx;
}
.title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.name{
  font-family: MicrosoftYaHei;
	font-size: 48rpx;
	letter-spacing: 4rpx;
	color: #3e3e3e;
}
.pay{
  font-family: MicrosoftYaHei;
	font-size: 28rpx;
	letter-spacing: 2px;
	color: #47abf6;
}
.label-list{
  display: flex;
}
.label{
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
.label image{
  width: 26rpx;
  height: 25rpx;
  margin-right: 10rpx;
}
.label-name{
  font-family: MicrosoftYaHei;
	font-size: 28rpx;
	letter-spacing: 2rpx;
	color: #3e3e3e;
}
.referral{
  padding: 0 20rpx 48rpx;
  border-bottom: 1px solid #e5e5e5;
}
.referral-title{
  height: 92rpx;
  width: 100%;
  padding-left:20rpx;
  position: relative;
  line-height: 92rpx;
  font-family: MicrosoftYaHei;
	font-size: 28rpx;
	letter-spacing: 2px;
	color: #3e3e3e;
}
.referral-title::after{
  position: absolute;
  top: 35rpx;
  left: 0;
  display: block;
  content: "";
  width: 2rpx;
  height: 22rpx;
  background-color: #ffe147
}
.referral-details{
  font-family: MicrosoftYaHei;
	font-size: 26rpx;
	line-height: 32rpx;
	letter-spacing: 1px;
	color: #5f5f5f;
}
.submit-resume{
  position: fixed;
  bottom: 97rpx;
  height: 90rpx;
  width: 640rpx;
  left: 55rpx;
  text-align: center;
  line-height: 90rpx;
  background-color: #47abf6;
  border-radius: 10px;
  font-family: MicrosoftYaHei;
	font-size: 28rpx;
	letter-spacing: 2rpx;
	color: #ffffff;
}