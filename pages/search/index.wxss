page{
  background-color: #fff
}
.container{
  padding: 0 20rpx;
}
.title-top{
  background: #fff;
}

.search{
  width: 100%;
  height: 58rpx;
  display: flex;
  align-items: center;
  background-color: #f1f2fb;
  border-radius: 10rpx;
  padding: 0 20rpx;
}
.search-icon{
  width: 24rpx;
  height: 22rpx;
  margin-right: 20rpx;
}
.search-input{
  flex: 1;
  font-family: MicrosoftYaHei;
	font-size: 24rpx;
	letter-spacing: 2rpx;
	color: #b6b6b6;
  /* height: 58rpx; */
}
.title{
  padding: 46rpx 0 44rpx;
  font-family: MicrosoftYaHei;
	font-size: 26rpx;
	letter-spacing: 2rpx;
  color: #b6b6b6;
  text-align: center;
}
.history-list{
  display: flex;
  flex-wrap: wrap;
}
.item{
  padding: 30rpx 0;
  text-align: center;
  width: 25%;
  font-family: MicrosoftYaHeiLight;
	font-size: 24rpx;
	letter-spacing: 2rpx;
	color: #848ac1;
}
.search-list{
  padding: 40rpx 20rpx;

}
.search-list-title{
  line-height: 40rpx;
  color: #b6b6b6;
  font-size: 26rpx;
  border-bottom: 1px solid #ccc
}
.search-project-item{
  padding: 14rpx 0;
  border-bottom: 1px solid #ccc;
  display: flex;
  align-items: center;
}
.item-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;    
}
.search-project-cont{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  max-width: 610rpx;
}
.search-item-title{
  font-size: 26rpx;
  color: #666;
}
.search-item-subheader{
  font-size: 24rpx;
  color: #999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}