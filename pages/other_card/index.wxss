  position: relative;
}
.watch-header-mask{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  text-align: center;
  line-height: 52rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5)
}
.history-cont{
  padding: 32rpx 20rpx 40rpx 42rpx;
  background-color: #f1f2fb
}
