	color: #4f4f4f;
}
.intro-cont{
  width: 100%;
  height: 170rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 20rpx;
}
.introduce{
  display: flex;
  align-items: flex-end;
  margin-bottom: 30rpx;
}
.introduce view:nth-of-type(1){
  font-size: 24rpx;
  color: #373737;
}
.introduce view:nth-of-type(2){
  font-size: 18rpx;
  color: #757575;
}
.watch{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.contact{
  position: relative;
  width: 140rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 50rpx;
  background-color: #47abf6;
  font-size: 24rpx;
  color:#fff;

}
.contact-hint{
  position: absolute;
  top:6rpx;
  right: 12rpx;
  width: 6rpx;
  height: 6rpx;
  border-radius: 6rpx;
  background-color: #ffe147;
}
