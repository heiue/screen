  display: flex;
  align-items: center;
}
.icon-history{
  width: 24rpx;
  height: 24rpx;
  margin-right: 20rpx;
}
.item-name{
  font-family: MicrosoftYaHei;
	font-size: 24rpx;
	letter-spacing: 2rpx;
	color: #474747;
}
.item-show{
  padding:20rpx 0 20rpx 32rpx;
  position: relative;
}
.item-show::after{
  display: block;
  width: 1px;
  height: 100%;
  content: "";
  position: absolute;
  top: -1px;
  left: 11rpx;
  background-color: #bbd7ff;
  opacity: 0.4;
}
.item-show image{
  width: 644rpx;
  height: 261rpx;
  border-radius: 10rpx;
}