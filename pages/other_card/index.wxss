  border-radius: 15rpx 15rpx 0 0
}
.header-card{
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
  height: 382rpx;
  background-color: #ecf6fe;
	box-shadow: 0px 0px 24rpx 0px 
		rgba(68, 68, 68, 0.15);
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx 0 40rpx;
}
.header-cont{
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.title{
  display: flex;
  margin-bottom: 36rpx;
  align-items:flex-end;
}
.name{
  font-family: MicrosoftYaHei;
	font-size: 48rpx;
	letter-spacing: 5rpx;
	color: #2e2e2e;
}
.title-icon{
  padding: 5rpx 10rpx 7rpx;
  height: 48rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between
}
.title-icon image{
  width: 16rpx;
  height: 16rpx;
  /* background-color: seagreen */
}
.title-text{
  font-family: MicrosoftYaHei;
  font-size: 20rpx;
	letter-spacing: 2rpx;
  color: #5b5b5b;
  padding-bottom: 4rpx;
}
.header-right{
  width: 238rpx;
  height:100%;
  padding: 10rpx 0;
}
.header-portrait{
  width: 238rpx;
  height: 238rpx;
  border-radius: 238rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
