  width: 100%;
  height: 100%;
}
.intro{
  margin-bottom: 36rpx;
  display: flex;
  align-items: flex-end
}
.intro view:nth-of-type(1){
  font-family: MicrosoftYaHei;
	font-size: 24rpx;
	letter-spacing: 2rpx;
	color: #4f4f4f;
}
.intro view:nth-of-type(2){
  font-family: MicrosoftYaHei;
	font-size: 20rpx;
	letter-spacing: 2rpx;
	color: #4f4f4f;
}
.form{
  padding: 0 20rpx;
}
