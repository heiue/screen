page{
  background-color: #fff;
}
.container{
  padding: 0 20rpx 30rpx;
}
.scroll-x {
  display: flex;
  flex-direction: row; 
  padding:20rpx 0;
  overflow: visible;
}
.nav-item{
  /* min-width: 80rpx; */
  text-align: center;
  font-size: 24rpx;
  color:  #3e3e3e;
  margin: 0 36rpx;
  display: inline-block;
}
.nav-item .on{
  color:#ffe147;
}
.project-nav{
  position: fixed;
  z-index: 99;
  top: 0;
  left: 0;
  height: 80rpx;
  background-color: #fff;
  width: 100%;
  box-shadow: 0px 4px 15px 0px rgba(116, 116, 116, 0.1)
}
.project-header{
  padding: 20rpx 0 32rpx;
}
.header-img{
  border-radius: 10rpx;
  overflow: hidden;
  width: 100%;
  height: 280rpx;
  background-color: aqua
}
.header-img image{
  width: 100%;
  height: 100%;
}
.show-header{
  position: relative;
}
.show-title{
  position: relative;
  width: 100%;
  height: 64rpx;
  padding-left: 24rpx;
  line-height: 64rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.show-title::after{
  position: absolute;
  top: 20rpx;
  left: 0;
  display: block;
  content: '';
  width: 4rpx;
  height: 24rpx;
  background-color: #ffe147
}
.show-header-text{
  font-size: 24rpx;
  color: #373737;
}
.get-more{
  padding: 10rpx;
}
.get-more image{
  width: 22rpx;
  height: 22rpx;
}
.more-title{
  position: absolute;
  left: -20rpx;
  top: 64rpx;
  z-index: 9;
  width: calc(100% + 40rpx);
  height: 0;
  overflow: hidden;
  overflow-y: auto;
  background-color: #fff;
  box-shadow: 0px 4px 15px 0px 
		rgba(85, 85, 85, 0.25);
}
.more-title-item{
  width: 16.66%;
  padding: 25rpx 0;
  font-family: MicrosoftYaHeiLight;
	font-size: 18rpx;
  color: #3e3e3e;
  text-align: center;
}
.more-title-list{
  display: flex;
  flex-wrap: wrap;
}
.item-img-show{
  width: 100%;
  height: 400rpx;
  position: relative;
}
.search{
  flex: 1;
  height: 68rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right:42rpx; 
}
.search image{
  width: 24rpx;
  height: 22rpx;
}
.item-video,
.item-cover,
.item-introduce,
.item-play-btn{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  overflow: hidden;
  border-radius: 10rpx;
}
.item-cover image{
  width: 100%;
  height: 100%;
}
.item-introduce{
  background-color: rgba(0,0,0,0.2)
}
.introduce{
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 20rpx;
}
.introduce-item{
  font-family: MicrosoftYaHei;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #fff;
  display: flex;
  justify-content: flex-start;
  align-items: center
}
.introduce-item image{
  width: 21rpx;
  height: 20rpx;
  margin-right: 20rpx;
}
.item-play-btn{
  display: flex;
  justify-content: center;
  align-items: center;
}
.play-btn{
  width: 85rpx;
  height: 85rpx;
}
.item-subhead{
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.subhead-left{
  display: flex;
  justify-content: flex-start;
  align-items: center
}
.subhead-left .subhead-icon{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
.item-name,.item-financing{
  font-family: MicrosoftYaHei;
  font-size: 24rpx;
  color: #393939;
  margin-left: 20rpx;
}
.item-financing{
  color: #393939
}
.subhead-right{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.item-see-num{
  margin: 0 10rpx;
}
.item-see-num image{
  width: 26rpx;
  height: 18rpx;
  margin-right: 10rpx;
}
.item-see-num text{
  font-size: 24rpx;
  color: #393939;
 
}
.project-classify-item{
    height: 80rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    /* background: #f7f7f7; */
    font-size: 14px;
    white-space: nowrap;
}