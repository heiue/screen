/* components/openList/index.wxss */
.open-class-item{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
    width: 338rpx;
    padding-bottom: 30rpx;
}
.image{
    position: relative;
    width: 100%;
}
.image image{
    width: 100%;
    height: 194rpx;
}
.time{
    position: absolute;
    right: 0;
    bottom: 30rpx;
    padding: 0 10rpx;
    height: 40rpx;
    line-height: 40rpx;
    background-color: rgba(0,0,0,0.6);
    border-top-left-radius: 40rpx;
    border-bottom-left-radius: 40rpx;
    color:#fff;
    font-size: 28rpx;
}
.live{
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    background-color: rgba(0,0,0,0.6);
}
.live image{
    width: 40rpx;
    height: 40rpx;
}
.img-text{
    color: #fff;
    font-size: 20rpx;
}
.title{
    font-size: 32rpx;
    padding: 20rpx 0;
    width: 338rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    color: #3c3d3d;
}
.subhead{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    color: #9d9e9e;
    font-size: 24rpx;
}