/* components/recommend/index.wxss */
.recommend{
  display: flex;
  justify-content: flex-start;
  border-bottom: 1px solid #ebeced;
  padding: 30rpx 0;
}

.item-img{
  width: 284rpx;
  height: 160rpx;
}

.item-img image{
  width: 100%;
  height: 100%;
}

.item-writer{
  padding-left: 10rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.hint{
  padding: 6rpx 8rpx;
  margin-right: 8rpx;
  border: 1px solid #ff6c00;
  background-color: rgba(255,108,0,.05);
  font-size: 22rpx;
  color: #ff6c00;
}

.title{
  font-size: 28rpx;
  color:#3c3c3c;
  font-weight: bolder;
}
.item-type{
  color: #6d6d6e;
  font-size: 24rpx;
}
.item-type text:nth-of-type(2){
  padding: 0 4rpx;
}

.num{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}
.number{
  color: #9d9e9e;
  font-size: 22rpx;
}
.price{
  color:#ff6c00;
  font-size: 26rpx;
}